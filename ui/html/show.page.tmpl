{{template "base" .}}

{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "main"}}
  {{with .Snippet}}
  <div class='snippet'>
    <div class='metadata'>
      <h1>{{.Title}}</h1>
      <span>#{{.ID}}</span>
    </div>
    <pre><code>{{.Content}}</code></pre>
    <div class='metadata'>
      <time>Created: {{humanDate .CreatedAt}}</time>
      <time>Expires: {{humanDate .ExpiresAt}}</time>
    </div>
  </div>
  {{end}}
{{end}}
